@import '~/assets/style/colors.styl'
@import '~/assets/style/variables.styl'

#app .hint
  display inline-block
  margin-left 10px

  &__text
    position absolute
    --corner-left 7px
    z-index 10
    visibility hidden
    width 299px
    padding 13px 15px 16px 19px
    box-sizing border-box
    border-radius 5px
    background hint-text-bg
    box-shadow 0px 9px 10px hint-text-shd
    color important-text-color
    filter drop-shadow(0px 9px 10px hint-text-shd)
    text-decoration none
    opacity 0
    transition opacity 0.5s ease-in-out

    & .hint-link
      color important-text-color
      text-decoration none

    &::after
      position absolute
      bottom -13px
      left var(--corner-left)
      border 7px solid transparent
      border-top 7px solid hint-text-bg
      content ''

    &_show
      visibility visible
      opacity 1

  &__button
    width 20px
    height 20px
    padding 0
    border 0
    border-radius 50%
    background hint-button-bg
    font-size 13px
    color main-color
    text-align center
    cursor pointer
    outline none
    -webkit-tap-highlight-color transparent
    text-decoration none

    &_touch
      background darken(hint-button-bg, tone)

    @media (hover hover) and (pointer fine)
      &:hover
        background darken(hint-button-bg, tone)
